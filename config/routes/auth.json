{

    "auth_register": {
        "method": "all",
        "route": "/register",
        "controller": "auth/register",
        "action": "register"
    },

    "auth_login": {
        "method": "all",
        "route": "/login",
        "controller": "auth/login",
        "action": "login"
    },

    "auth_logout": {
        "method": "all",
        "route": "/logout",
        "controller": "auth/logout",
        "action": "logout"
    },

    "auth_external_service_connect": {
        "method": "all",
        "route": "/auth/external/service/:provider/connect",
        "controller": "auth/external_service",
        "action": "connect"
    },

    "auth_external_service_disconnect": {
        "method": "all",
        "route": "/auth/external/service/:provider/disconnect",
        "controller": "auth/external_service",
        "action": "disconnect"
    }

}