doctype html
html(ng-app="regidiumApp")
    head
        meta(charset='utf8')
        base(href='/')
        title Regidium
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/app.css')
    body(ng-init="loadScopes()")
        .navbar.navbar-inverse.navbar-fixed-top
            .navbar-inner
                .container
                    button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
                      span.icon-bar
                      span.icon-bar
                      span.icon-bar
                a.brand(href='/') Regidium
                .nav-collapse.collapse
                    ul.nav
                        li.active
                            a(href='/') Home
                    ul.nav.pull-right
                        - if (user && user.uid)
                            li
                                a(data-toggle='modal', href='#changeNameModal') Change my name
                        li
                            - if (user && user.uid)
                                a(data-toggle='modal', href='#infoModal') Logout
                            - else
                                a(data-toggle='modal', href='#infoModal') Login

        block body

        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
        script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js')
        script(src='//code.angularjs.org/1.2.6/angular.min.js')
        script(src='/socket.io/socket.io.js')
        script(src='js/app/userApp.js')
        script(src='js/app/common/services.js')
        script(src='js/app/common/controllers.js')
        script(src='js/app/common/filters.js')
        script(src='js/app/common/directives.js')