doctype html
html(ng-app="regidiumApp")
    head
        meta(charset="utf8")
        base(href="/")
        title My Regidium
        link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css")
        link(rel="stylesheet", href="/lib/angular/angular-loading-bar/loading-bar.min.css")
        link(rel="stylesheet", href="/css/app.css")
    body(ng-controller='CoreCtrl')
        div.container
            div.jumbotron
                h1 My Regidium
                p Please login
                p
                    a.btn.btn-lg.btn-primary(data-toggle="modal", href="#register") Register
                    a.btn.btn-lg.btn-success(data-toggle="modal", href="#login") Login

        #register.modal.fade(tabindex="-1", role="dialog", aria-labelledby="login", aria-hidden="true")
            .modal-body
                .modal-dialog
                    .modal-content.form-auth
                        .modal-header
                            button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
                            h4.modal-title Register
                        .modal-body
                            p
                                form(role="form", ng-submit='register()', name="register_form")
                                    input.form-control(ng-model="user.fullname", name="fullname", type="text", placeholder="Full name", autofocus="autofocus")
                                    input.form-control(ng-model="user.email", ng-required="true", name="email", type="email", placeholder="Email address", required="required")
                                    span.has-error
                                        span.help-block(ng-show="register_form.email.$error.email") Should be valid email address!
                                    input.form-control(ng-model="user.password", ng-required="true", name="password", type="password", placeholder="Password", required="required")
                                    input.form-control(ng-model="user.confirm_password", ng-required="true", name="confirm_password", ui-equal-to="user.password", type="password", placeholder="Confirm password", required="required")
                                    span.has-error
                                        span.help-block.has-error(ng-show="register_form.confirm_password.$error.equal") Should be equal to password!
                                    label.checkbox
                                        input(type="checkbox", value="remember")
                                        | Remember me (не реализовано)
                                    p
                                        button.btn.btn-lg.btn-primary.btn-block(type="submit", ng-disabled="register_form.$invalid") Register
                                    p
                                        button.btn.btn-lg.btn-danger.btn-block(type="button", data-dismiss="modal", aria-hidden="true") Close

        #login.modal.fade(tabindex="-1", role="dialog", aria-labelledby="login", aria-hidden="true")
            .modal-body
                .modal-dialog
                    .modal-content.form-auth
                        .modal-header
                            button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
                            h4.modal-title Login
                        .modal-body
                            p
                                form(role="form", ng-submit='login()')
                                    input.form-control(ng-model="user.email", type="email", placeholder="Email address", required="required", autofocus="autofocus")
                                    input.form-control(ng-model="user.password", type="password", placeholder="Password", required="required")
                                    label.checkbox
                                        input(type="checkbox", value="remember")
                                        | Remember me (не реализовано)
                                    p
                                        button.btn.btn-lg.btn-primary.btn-block(type="submit") Login
                                    p
                                        button.btn.btn-lg.btn-danger.btn-block(type="button", data-dismiss="modal", aria-hidden="true") Close

        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js', type="text/javascript")
        script(src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js', type="text/javascript")
        script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js', type="text/javascript")
        script(src='//code.angularjs.org/1.2.6/angular.min.js', type="text/javascript")
        script(src="//cdn.jsdelivr.net/restangular/1.1.3/restangular.min.js", type="text/javascript")
        script(src="/lib/angular/angular-loading-bar/loading-bar.min.js", type="text/javascript")
        script(src="/lib/angular/angular-flash/angular-flash.js", type="text/javascript")
        script(src="/lib/angular/angular-underscore/angular-underscore.js", type="text/javascript")
        script(src='js/app/core/app.js', type="text/javascript")
        script(src='js/app/core/controllers.js', type="text/javascript")
        script(src='js/app/common/services.js', type="text/javascript")
        script(src='js/app/common/directives.js', type="text/javascript")