extends ../common/layout

block header
    .navbar-header
        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only(translate) Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href="/user", translate) Regidium
    .collapse.navbar-collapse(role="navigation")
        ul.nav.navbar-nav
            li
                a(href="/user", translate) Home
            li
                a(href="/user/chat", translate) Chat
        ul.nav.navbar-nav.pull-right
            li(ng-controller="UserAuthLogoutCtrl")
                a(href="", ng-click="logout()", translate) Logout

block content
    div(ng-controller="UserCtrl")
        .row(ng-view)

block script
    script(src= (config.server.url + ':' + config.server.port + '/socket.io/socket.io.js'))
    script(src='/js/app/user/app.js', type="text/javascript")
    script(src='/js/app/user/controllers.js', type="text/javascript")
    script(src='/js/app/main/controllers.js', type="text/javascript")
    script(src='/js/app/main/directives.js', type="text/javascript")
    script(src='/js/app/common/config/config.js', type="text/javascript")
    script(src='/js/app/common/services.js', type="text/javascript")
    script(src='/js/app/common/directives.js', type="text/javascript")
    script(src='/js/app/common/models.js', type="text/javascript")